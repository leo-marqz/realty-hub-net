@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Acceso Denegado";
}

<!-- HEADER -->
<div class='py-10'>
    <h1 class="text-4xl my-10 font-extrabold text-center">
        Realty <span class="font-normal">Hub</span>
    </h1>
    <h2 class="text-center text-2xl font-extrabold ">
        @ViewData["Title"]
    </h2>
</div>

<!-- MESSAGE -->
<div class="mt-8 mx-auto max-w-md">
    <div class="bg-white py-8 px-4 shadow text-center">
        <p class="text-gray-700 text-lg mb-4">
            Lo sentimos, no tienes permiso para acceder a esta página.
        </p>
        <a href="/auth/signin" class="inline-block bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded-md cursor-pointer">
            Volver al inicio de sesión
        </a>
    </div>
</div>